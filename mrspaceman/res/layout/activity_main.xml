    <FrameLayout
        android:id="@+id/frame_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#000000" />
    
    <!--  -->

</RelativeLayout>