    android:layout_height="match_parent"
    tools:context="com.labs.mrspaceman.MainActivity">

    <FrameLayout
        android:id="@+id/frame_song"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" >
